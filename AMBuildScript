print('hello, world!')
import sys
print(sys.argv)

builder.cxx = builder.DetectCxx()
if builder.cxx.like('gcc'):
    builder.cxx.cflags += [
        '-Wall',
        '-Werror'
    ]

program = builder.cxx.Program('sample')
program.sources += [
    'src/main.cpp',
]

builder.Add(program)
